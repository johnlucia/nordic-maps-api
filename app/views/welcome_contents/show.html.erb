<%- model_class = WelcomeContent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:heading) %>:</strong></dt>
  <dd><%= @welcome_content.heading %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @welcome_content.body %></dd>
  <dt><strong><%= model_class.human_attribute_name(:link_text) %>:</strong></dt>
  <dd><%= @welcome_content.link_text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:link_url) %>:</strong></dt>
  <dd><%= @welcome_content.link_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @welcome_content.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @welcome_content.active %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              welcome_contents_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_welcome_content_path(@welcome_content), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              welcome_content_path(@welcome_content),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
