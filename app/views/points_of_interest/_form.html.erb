<%= form_for @point_of_interest, :html => { :class => "form-horizontal point_of_interest" } do |f| %>
<%# :url => points_of_interest_path,  %>
  <% if @point_of_interest.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@point_of_interest.errors.count, "error") %> prohibited this point_of_interest from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @point_of_interest.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-sm-2 col-lg-2' %>
    <div class="col-sm-10 col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :uid, :class => 'control-label col-sm-2 col-lg-2' %>
    <div class="col-sm-10 col-lg-10">
      <%= f.text_field :uid, :class => 'form-control' %>
    </div>
    <%=f.error_span(:uid) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-sm-2 col-lg-2' %>
    <div class="col-sm-10 col-lg-10">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :active, :class => 'control-label col-sm-2 col-lg-2' %>
    <div class="col-sm-10 col-lg-10">
      <%= f.check_box :active %>
    </div>
    <%=f.error_span(:active) %>
  </div>
  <div class="form-group">
    <%= f.label :latitude, :class => 'control-label col-sm-2 col-lg-2' %>
    <div class="col-sm-10 col-lg-10">
      <%= f.text_field :latitude, :class => 'form-control' %>
    </div>
    <%=f.error_span(:latitude) %>
  </div>
  <div class="form-group">
    <%= f.label :longitude, :class => 'control-label col-sm-2 col-lg-2' %>
    <div class="col-sm-10 col-lg-10">
      <%= f.text_field :longitude, :class => 'form-control' %>
    </div>
    <%=f.error_span(:longitude) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                points_of_interest_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
