<%- model_class = Sponsor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @sponsor.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logoUrl) %>:</strong></dt>
  <dd><%= @sponsor.logoUrl %></dd>
  <dt><strong><%= model_class.human_attribute_name(:linkUrl) %>:</strong></dt>
  <dd><%= @sponsor.linkUrl %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sponsorship_level_id) %>:</strong></dt>
  <dd><%= @sponsor.sponsorship_level_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @sponsor.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @sponsor.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @sponsor.notes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sponsors_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sponsor_path(@sponsor), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sponsor_path(@sponsor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
