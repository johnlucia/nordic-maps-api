<%= form_for @sponsorship_level, :html => { :class => "form-horizontal sponsorship_level" } do |f| %>

  <% if @sponsorship_level.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sponsorship_level.errors.count, "error") %> prohibited this sponsorship_level from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sponsorship_level.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-sm-2 col-lg-2' %>
    <div class="col-sm-10 col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sponsorship_levels_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
