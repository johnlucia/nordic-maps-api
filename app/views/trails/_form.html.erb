<%= form_for @trail, :html => { :class => "form-horizontal trail" } do |f| %>

  <% if @trail.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@trail.errors.count, "error") %> prohibited this trail from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @trail.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :uid, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :uid, :class => 'form-control' %>
    </div>
    <%=f.error_span(:uid) %>
  </div>
  <div class="form-group">
    <%= f.label :color, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :color, :class => 'form-control' %>
    </div>
    <%=f.error_span(:color) %>
  </div>
  <div class="form-group">
    <%= f.label :length, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :length, :class => 'form-control' %>
    </div>
    <%=f.error_span(:length) %>
  </div>
  <div class="form-group">
    <%= f.label :level, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:level, [['1',1],['2',2],['3',3]], { class: 'form-control', include_blank: true }) %>
    </div>
    <%=f.error_span(:level) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :coordinates_json, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :coordinates_json, :class => 'form-control' %>
    </div>
    <%=f.error_span(:coordinates_json) %>
  </div>
  <div class="form-group">
    <%= f.label :active, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :active %>
    </div>
    <%=f.error_span(:active) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                trails_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
